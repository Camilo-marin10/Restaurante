extends ../layout/index

block contenido
    .py-10

        h1.text-4xl.my-10.font-extrabold.text-center Bienes Raices 
            span.font-normal SENA
        
        // El título principal varía según si hay error o no
        h2.text-center.text-3xl.font-bold(class=error ? 'text-red-600' : 'text-indigo-600')=titulo

        div.bg-white.py-8.px-4.shadow.rounded-lg.max-w-md.mx-auto.mt-10
            p.text-center.text-gray-900.font-bold.mb-4=mensaje
            
            // Si pasamos un enlace y un botón, lo mostramos
            if enlace && btn
                a(
                    class="w-full font-semibold py-3 rounded-lg cursor-pointer transition duration-300 block text-center"
                    class=error ? 'bg-red-700 hover:bg-red-800 text-white' : 'bg-indigo-700 hover:bg-indigo-800 text-white'
                    href=enlace
                )= btn