extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes Raices 
            span.font-normal SENA
        h2.text-center.text-3xl.font-bold.text-indigo-600=tituloPagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-500.text-white.uppercase.text-sm.text-center.p-3.mb-2.rounded-lg.font-semibold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-10.px-6.shadow-2xl.rounded-xl.border.border-gray-200 
                form.space-y-6(action="/auth/registro", method="post")
                    input(type="hidden" name="_csrf" value=csrfToken )
                    div 
                        label.block.text-sm.font-medium.text-gray-700.mb-2(for="nombre") Nombre
                        input#nombre(
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:ring-indigo-500 focus:border-indigo-500" 
                            placeholder="Tu Nombre" 
                            type="text" 
                            name="nombre" 
                            value="#{usuario.nombre ? usuario.nombre : ''}"
                        )
                    
                    div 
                        label.block.text-sm.font-medium.text-gray-700.mb-2(for="email") Correo Electrónico
                        input#email(
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:ring-indigo-500 focus:border-indigo-500" 
                            placeholder="Tu Email de Registro" 
                            type="email" 
                            name="email" 
                            value="#{usuario.email ? usuario.email : ''}"
                        )
                    
                    div 
                        label.block.text-sm.font-medium.text-gray-700.mb-2(for="password") Contraseña
                        input#password(
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:ring-indigo-500 focus:border-indigo-500" 
                            placeholder="Elige tu Contraseña" 
                            type="password" 
                            name="password"
                        )
                    
                    div 
                        label.block.text-sm.font-medium.text-gray-700.mb-2(for="repetir_password") Repetir Contraseña
                        input#repetir_password(
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:ring-indigo-500 focus:border-indigo-500" 
                            placeholder="Repite tu Contraseña" 
                            type="password" 
                            name="repetir_password"
                        )
                    
                    .flex.items-center.justify-between.text-sm
                        a(class=".font-medium.text-indigo-600.hover:text-indigo-500" href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                        a(class=".font-medium.text-gray-500.hover:text-gray-700" href="/auth/olvide-password") Olvidé mi Contraseña

                    input(class="w-full bg-indigo-700 hover:bg-indigo-800 text-white font-semibold py-3 mt-4 rounded-lg cursor-pointer transition duration-300" type="submit" value="Crear Cuenta")