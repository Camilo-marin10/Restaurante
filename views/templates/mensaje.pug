            if enlace && btn
                a(
                    class="w-full bg-red-700 hover:bg-red-800 text-white font-bold py-3 rounded-lg cursor-pointer transition duration-300 block text-center shadow-lg transform hover:scale-[1.01]" 
                    href=enlace
                )= btn