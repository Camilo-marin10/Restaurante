header.bg-indigo-600.p-4
    .container.mx-auto.flex.justify-between.items-center
        a(href="/") 
            h1.text-2xl.text-white.font-extrabold.text-center Bienes Raices 
                span.font-normal SENA

        nav(class="my-5 text-sm md:flex md:items-center md:gap-3 font-bold text-white")
            if usuario
                span.text-white Bienvenido, #{usuario.nombre}
                a(href="/mis-propiedades" class="hover:text-indigo-200") Mis Propiedades
                form(action="/auth/cerrar-sesion" method="POST" class="inline")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    input(type="submit" class="bg-indigo-800 hover:bg-indigo-400 py-2 px-4 rounded-lg font-bold cursor-pointer" value="Cerrar Sesión")
            else
                a(href="/auth/registro" class="hover:text-indigo-200") Crear Cuenta
                a(href="/auth/login" class="hover:text-indigo-200") Iniciar Sesión

div(class="bg-indigo-700 py-5 hidden lg:block")
    div(class="container mx-auto flex justify-between")
        nav(class="flex gap-4 items-center")
            a(href="/categorias/1" class="text-sm font-bold uppercase text-white") Casas 
            a(href="/categorias/2" class="text-sm font-bold uppercase text-white") Departamentos 
            a(href="/categorias/3" class="text-sm font-bold uppercase text-white") Bodegas 
            a(href="/categorias/4" class="text-sm font-bold uppercase text-white") Terrenos 
            a(href="/categorias/5" class="text-sm font-bold uppercase text-white") Cabañas 

        form(action="/buscador" method="POST" class="flex gap-3 items-center")
            input(type="hidden" name="_csrf" value= csrfToken)
            label(for="termino" class="text-sm uppercase font-bold text-white") Búsqueda
            input(type="text" id="termino" name="termino" placeholder="Buscar Propiedades" class="bg-white p-2 rounded-lg shadow text-sm")

            input(type="submit" class="bg-indigo-800 hover:bg-indigo-400 rounded-lg text-white uppercase font-bold p-2 cursor-pointer text-sm" value="Buscar") 