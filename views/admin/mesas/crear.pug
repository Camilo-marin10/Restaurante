extends ../../layout/index

block contenido
    div(class="py-10")
        h2(class="text-3xl font-bold text-gray-900 mb-6") Crear Nueva Mesa
        
        if errores
            div(class="max-w-md mx-auto")
                each error in errores
                    p(class="bg-red-500 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        div(class="bg-white shadow-lg py-8 px-4 rounded-lg mx-auto max-w-md")
            form(method="POST")
                input(type="hidden" name="_csrf" value= csrfToken)

                div(class="mb-4")
                    label(for="nombre" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Nombre/Número de Mesa
                    input(id="nombre" name="nombre" type="text" placeholder="Ej. Mesa 5 o Terraza Principal" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" value= datos.nombre ? datos.nombre : '')

                div(class="mb-4")
                    label(for="capacidad" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Capacidad (personas)
                    input(id="capacidad" name="capacidad" type="number" min="1" placeholder="Ej. 4" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" value= datos.capacidad ? datos.capacidad : '')

                div(class="mb-4")
                    label(for="zona" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Zona
                    select(id="zona" name="zona" class="w-full px-3 py-2 border border-gray-300 rounded-md")
                        option(value="") -- Seleccionar Zona --
                        each zonaOpt in zonas
                            option(value=zonaOpt selected= datos.zona === zonaOpt ? true : false)= zonaOpt
                
                input(type="submit" value="Añadir Mesa" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer rounded-md uppercase transition duration-300")