extends ../../layout/index

block contenido
    div(class="py-10")
        h2(class="text-3xl font-bold text-gray-900 mb-6") #{titulo}
        
        div(class="flex justify-end mb-6")
            
            a(href="/admin/mesas/crear" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-md uppercase text-sm") Crear Mesa

        
        if mesas.length
            div(class="bg-white shadow rounded-lg overflow-hidden")
                div(class="overflow-x-auto")
                    table(class="min-w-full divide-y divide-gray-200")
                        thead(class="bg-gray-50")
                            tr
                                th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase") Nombre
                                th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase") Capacidad
                                th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase") Zona
                                th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase") Estado
                                th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase") Acciones
                        
                        tbody(class="bg-white divide-y divide-gray-200")
                            each mesa in mesas
                                tr
                                    td(class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900") #{mesa.nombre}
                                    td(class="px-6 py-4 whitespace-nowrap text-sm text-gray-500") #{mesa.capacidad}
                                    td(class="px-6 py-4 whitespace-nowrap text-sm text-gray-500") #{mesa.zona}
                                    td(class="px-6 py-4 whitespace-nowrap")
                                        // Muestra el estado (Activa/Inactiva)
                                        - const estadoClase = mesa.estado ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'
                                        - const estadoTexto = mesa.estado ? 'Activa' : 'Inactiva'
                                        span(class=`${estadoClase} px-2 inline-flex text-xs leading-5 font-semibold rounded-full`) #{estadoTexto}

                                    td(class="px-6 py-4 whitespace-nowrap text-sm font-medium flex gap-2")
                                
                                        a(href=`/admin/mesas/editar/${mesa.id}` class="text-indigo-600 hover:text-indigo-900")
                                            | Editar

                                        
                                        form(method="POST" action=`/admin/mesas/eliminar/${mesa.id}`)
                                            input(type="hidden" name="_csrf" value= csrfToken)
                                            button(type="submit" class="text-red-600 hover:text-red-900")
                                                | Eliminar
        else
            
            div(class="text-center py-10")
                p(class="text-gray-500") No hay mesas registradas. 
                a(href="/admin/mesas/crear" class="text-indigo-600 font-medium") Â¡Crea la primera mesa ahora!