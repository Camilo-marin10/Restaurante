extends ../../layout/index

block contenido
    div(class="py-10")
        h2(class="text-3xl font-bold text-gray-900 mb-6") #{titulo}
        
        div(class="flex justify-end mb-6")
            a(href="/admin/clientes/crear" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-md uppercase text-sm") Registrar Nuevo Cliente

        if clientes.length
            div(class="bg-white shadow rounded-lg overflow-hidden")
                div(class="overflow-x-auto")
                    table(class="min-w-full divide-y divide-gray-200")
                        thead(class="bg-gray-50")
                            tr
                                th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase") Nombre
                                th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase") Contacto
                                th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase") Notas
                                th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase") Acciones
                        
                        tbody(class="bg-white divide-y divide-gray-200")
                            each cliente in clientes
                                tr
                                    td(class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900") #{cliente.nombre} #{cliente.apellido}
                                    td(class="px-6 py-4 whitespace-nowrap text-sm text-gray-500")
                                        p Correo: #{cliente.email || 'N/A'}
                                        p Teléfono: #{cliente.telefono || 'N/A'}
                                    td(class="px-6 py-4 whitespace-normal text-sm text-gray-500 max-w-xs") 
                                        span #{cliente.notas || 'Sin notas.'}
                                        
                                    td(class="px-6 py-4 whitespace-nowrap text-sm font-medium flex gap-2")
                                        a(href=`/admin/clientes/editar/${cliente.id}` class="text-indigo-600 hover:text-indigo-900")
                                            | Editar
                                        form(method="POST" action=`/admin/clientes/eliminar/${cliente.id}`)
                                            input(type="hidden" name="_csrf" value= csrfToken)
                                            button(type="submit" class="text-red-600 hover:text-red-900")
                                                | Eliminar
        else
            div(class="text-center py-10")
                p(class="text-gray-500") No hay clientes registrados. 
                a(href="/admin/clientes/crear" class="text-indigo-600 font-medium") ¡Registra el primer cliente ahora!