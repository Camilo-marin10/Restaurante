extends ../../layout/index

block contenido
    div(class="py-10")
        h2(class="text-3xl font-bold text-gray-900 mb-6") #{titulo}
        
        // Mensajes de error de Express Validator
        if errores
            div(class="max-w-md mx-auto")
                each error in errores
                    p(class="bg-red-500 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        div(class="bg-white shadow-lg py-8 px-4 rounded-lg mx-auto max-w-md")
            form(method="POST")
                input(type="hidden" name="_csrf" value= csrfToken)

                div(class="mb-4")
                    label(for="nombre" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Nombre
                    input(id="nombre" name="nombre" type="text" placeholder="Nombre del Cliente" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" value= datos.nombre ? datos.nombre : '')

                div(class="mb-4")
                    label(for="apellido" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Apellido
                    input(id="apellido" name="apellido" type="text" placeholder="Apellido del Cliente" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" value= datos.apellido ? datos.apellido : '')

                div(class="mb-4")
                    label(for="email" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Correo Electrónico (Opcional)
                    input(id="email" name="email" type="email" placeholder="Correo Electrónico" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" value= datos.email ? datos.email : '')

                div(class="mb-4")
                    label(for="telefono" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Teléfono
                    input(id="telefono" name="telefono" type="tel" placeholder="Número de Teléfono" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" value= datos.telefono ? datos.telefono : '')
                
                div(class="mb-4")
                    label(for="notas" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Notas (Alergias, Preferencias, etc.)
                    textarea(id="notas" name="notas" placeholder="Alergias, preferencias de mesa, etc." class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")= datos.notas ? datos.notas : ''

                input(type="submit" value="Guardar Cliente" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer rounded-md uppercase transition duration-300")